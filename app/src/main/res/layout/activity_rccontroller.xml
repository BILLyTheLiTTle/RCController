<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".RCControllerActivity">

    <View
        android:id="@+id/feedback_area_critical"
        android:layout_width="550dp"
        android:layout_height="39dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tcs_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/feedback_area_critical"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_critical"
        app:srcCompat="@drawable/tcs_off" />

    <ImageView
        android:id="@+id/abs_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/tcs_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abs_off" />

    <ImageView
        android:id="@+id/esc_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/abs_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esc_off" />

    <ImageView
        android:id="@+id/understeer_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/esc_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/understeer_off" />

    <ImageView
        android:id="@+id/oversteer_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/understeer_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oversteer_off" />

    <ImageView
        android:id="@+id/cds_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/oversteer_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cds_off" />

    <ImageView
        android:id="@+id/carTemps_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/batteryTemp_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car_temps_off" />

    <ImageView
        android:id="@+id/frontDriverMotorTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/carTemps_imageView"
        app:layout_constraintTop_toTopOf="@+id/carTemps_imageView"/>

    <ImageView
        android:id="@+id/frontCoDriverMotorTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/carTemps_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/carTemps_imageView"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/frontHbridgeTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/frontDriverMotorTemps_imageView"
        app:layout_constraintTop_toBottomOf="@+id/frontDriverMotorTemps_imageView"
        app:layout_constraintBottom_toTopOf="@+id/frontCoDriverMotorTemps_imageView"/>

    <ImageView
        android:id="@+id/rearDriverMotorTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/carTemps_imageView"
        app:layout_constraintTop_toTopOf="@+id/carTemps_imageView"/>

    <ImageView
        android:id="@+id/rearCoDriverMotorTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/carTemps_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/carTemps_imageView"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/rearHbridgeTemps_imageView"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/rearDriverMotorTemps_imageView"
        app:layout_constraintTop_toBottomOf="@+id/rearDriverMotorTemps_imageView"
        app:layout_constraintBottom_toTopOf="@+id/rearCoDriverMotorTemps_imageView"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/batteryTemp_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/raspiTemp_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/batteries_temp_off" />

    <ImageView
        android:id="@+id/raspiTemp_imageView"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/feedback_area_critical"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/raspi_temp_off" />

    <View
        android:id="@+id/feedback_area_info"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:background="@color/black_overlay"
        app:layout_constraintEnd_toEndOf="@+id/feedback_area_critical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_area_critical" />

    <ImageView
        android:id="@+id/leftTurn_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/feedback_area_info"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/turn_light_off" />

    <ImageView
        android:id="@+id/emergency_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/leftTurn_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/emergency_lights_off" />

    <ImageView
        android:id="@+id/rightTurn_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/emergency_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/turn_light_off"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/reverse_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/rightTurn_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/reverse_off" />

    <ImageView
        android:id="@+id/lights_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/reverse_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/lights_off" />

    <!-- cruise control -->
    <ImageView
        android:id="@+id/cc_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/lights_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/cruise_control_off" />

    <ImageView
        android:id="@+id/engineStartStop_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/cc_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/engine_stopped_start_action" />

    <ImageView
        android:id="@+id/parkingBrake_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/engineStartStop_imageView"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/parking_brake_off" />

    <ImageView
        android:id="@+id/handbrake_imageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/feedback_area_info"
        app:layout_constraintTop_toTopOf="@+id/feedback_area_info"
        app:srcCompat="@drawable/handbrake_off" />

    <SeekBar
        android:id="@+id/steering_seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:max="100"
        android:progress="50"
        android:enabled="false"
        android:progressTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vehicle_speed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        android:text="@string/tachometer"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/feedback_area_critical"
        app:layout_constraintTop_toTopOf="parent">

        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
            android:id="@+id/throttleNbrake_mySeekBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:max="100"
            android:progress="10"
            android:enabled="false"
            android:progressTint="@android:color/transparent"
            android:splitTrack="false"
            app:seekBarRotation="CW270" /><!-- Rotation: CW90 or CW270 -->
    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

</android.support.constraint.ConstraintLayout>
