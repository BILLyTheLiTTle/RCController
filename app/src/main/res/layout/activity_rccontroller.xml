<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".RCControllerActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:id="@+id/feedback_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/feedback_area_critical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginBottom="10dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/tc_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/abs_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/esc_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/understeer_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/oversteer_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/cds_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/rearHBridgeTemp_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/batteryTemp_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/rearCoDriverMotorTemp_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/rearDriverMotorTemp_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/raspiTemp_imageView"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_launcher_round" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback_area_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/leftTurn_imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/rightTurn_imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/reverse_imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/lights_imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <!-- cruise control -->
        <ImageView
            android:id="@+id/cc_imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/vehicle_speed_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/tachometer"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />


